@page
@using System.Net
@{
    Layout = "_Layout";
}

@section Scripts {
        <script src="~/js/register.js"></script>
}

    @section Sredina {
       <div class="container margins-auto">
            <div class="row">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card border-0 shadow rounded-3 my-5">               
                        <div class="card-body p-4 p-sm-5">                  
                            <h5 class="card-title text-center mbb-6 fw-light fs-5 text-uppercase fw-bold">Registracija</h5>
                            <div class="alert alert-danger bg-danger text-white font-weight-bold d-none" id="error"></div>
                            <div class="alert alert-success p-3 mb-2 bg-success text-white d-none" id="success"></div>

                            <form id="forma1"> 

                                <div class="form-floating mb-3">
                                    <input id="user" class="form-control" placeholder="Username">
                                    <label for="floatingInput">Username</label>
                                </div>                      
                                <label class="d-none">Neispravno</label>

                                <div class="form-floating mb-3">
                                    <input id="pass" type="password" class="form-control" placeholder="Password">
                                    <label for="floatingPassword">Password</label>
                                </div>        

                                <div class="d-grid">
                                    <button id="reg" class="btn btn-primary1 text-uppercase fw-bold" type="button">Registruj se</button>
                                </div>

                                <hr class="my-4">
                                <div class="d-grid mb-2">
                                <a class="drugo text-uppercase fw-bold" href="Login?ReturnUrl=%2fHome%2fIndex">Već imas nalog? Prijavi se!</a>
                                </div>
                            </form>

                        </div>
                    </div> 
                </div>          
            </div>      
        </div>
}