@page
@using System.Web
@{
    Layout = "_Layout";
}
@section Scripts {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="~/js/user.js"></script>
}
@section Sredina {
    <div id="notification" class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    </div>
        <table class="text-uppercase table table-dark table-hover" id="tabindex" style="margin-top: 100px; max-width:1000px;margin-left: auto; margin-right:auto;">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Symbol</th>
                    <th scope="col">Price</th>
                    <th scope="col" style="width: 200px">Graph</th>
                </tr>
            </thead>
            <tbody id="coinRow"></tbody>            
        </table>
    <section class="py-5">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center" id="vozila">                
            </div>
        </div>
    </section>
}
